#include <avr/sleep.h>
#include <avr/power.h>
#include <LowPower.h>
#include <TimerOne.h>
#include <LiquidCrystal.h>
int secondi=0;
LiquidCrystal lcd(12, 11, 7, 6, 5, 4);
void pin2Interrupt(void) {
  detachInterrupt(digitalPinToInterrupt(2));
  digitalWrite(13, HIGH);
}

void enterSleep(void) {
  
  attachInterrupt(digitalPinToInterrupt(2), pin2Interrupt, LOW);
  delay(100);
  
  digitalWrite(13, LOW);
  set_sleep_mode(SLEEP_MODE_PWR_DOWN);
  sleep_enable();  
  sleep_mode();
  sleep_disable(); 
}

void setup() {
  Timer1.initialize(20000000);
  Timer1.attachInterrupt(secondi);
  Serial.begin(9600);
   lcd.begin(16, 2);
  pinMode(2, INPUT_PULLUP);
  pinMode(13, OUTPUT);
   lcd.setCursor(1,0);
  lcd.print("Sistema: ok");

  digitalWrite(13, HIGH);
}



void loop() {
  delay(1000);
  secondi++;
   lcd.setCursor(0,1);
   lcd.print("Activo");
    lcd.setCursor(7,8);
  lcd.print(secondi, DEC);
  lcd.setCursor(8,10);
   lcd.print("s.");
  if(secondi == 2) {
     lcd.setCursor(1,0);
    lcd.print("Dormir!      ");
    delay(900);
    lcd.setCursor(0,1);
      lcd.print("          ");
         delay(900);
      lcd.setCursor(1,0);
      lcd.print("        ");
    secondi ++;
    enterSleep();
  }
    else{
      if(secondi==5){
    lcd.setCursor(1,0);
    lcd.print("Dormir!");
    delay(1000);
    lcd.setCursor(1,0);
    lcd.print("        ");
    lcd.setCursor(0,1);
    lcd.print("          ");
    secondi ++;
    enterSleep();
  
        }else{
          if(secondi==8){
       lcd.setCursor(1,0);
       lcd.print("Dormir!");
        delay(1000);
       lcd.setCursor(1,0);
       lcd.print("        ");
       lcd.setCursor(0,1);
       lcd.print("          ");
    secondi ++;
    enterSleep();
            }else{
               if (secondi==10){
        LowPower.powerDown(SLEEP_8S, ADC_OFF, BOD_OFF); 
        lcd.setCursor(1,0);
        lcd.print("AHORRO");
        delay(1000);
      }
      }
              
      }
     }
    }
   
